# App
ENV=dev
DEBUG=true
EXPOSE_DEBUG=true
ENABLE_ANSWERER=true

# Security
INTERNAL_API_KEY=change_me
WEBHOOK_VERIFY_SIGNATURE=0
WEBHOOK_SECRET=change_me
WEBHOOK_REPLAY_WINDOW_SEC=300

# LLM (Ollama Cloud)
OLLAMA_API_BASE=https://YOUR_OLLAMA_CLOUD_BASE/v1
OLLAMA_API_KEY=YOUR_TOKEN
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT_SEC=30
OLLAMA_RETRIES=2

# Plugins
TOOLS_PROVIDER=app.plugins.tools_mock:register
QUERIES_PROVIDER=app.plugins.queries_mock:register

# Stores
DEDUPE_TTL_SEC=3600
SESSION_TTL_SEC=86400

DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=app_db
DB_USER=app_user
DB_PASS=app_pass